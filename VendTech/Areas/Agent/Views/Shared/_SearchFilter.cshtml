@model PagingModel
<div class="row ">
    <div class="" id="searchRow">
        <div class="filter col-md-2">
            <label class="control-label">Show Records</label>
            <select class="form-control filter-select input-sm" id="showRecords">
                <option value="10" selected="selected">10</option>
                <option value="20">20</option>
                <option value="50">50</option>
                <option value="100">100</option>

            </select>
        </div>
        <div class="filter col-md-3 ">
            <label class="control-label">Search</label>
            <div class="input-group">
                <span id="btnFilterPeople" class="input-group-addon green-search btn-primary">
                    <i class="fa fa-search white-search"></i>
                </span>
                @Html.HiddenFor(x => x.SortBy)
                @Html.HiddenFor(x => x.SortOrder)
                @Html.TextBoxFor(m => m.Search, new { @class = "form-control filter-textbox input-sm", placeholder = "Search" })
            </div>
        </div>
   
        <div class="filter col-md-2">
            <label class="control-label displayBlock">&nbsp;</label>
            <input type="button" value="Search" id="btnFilterSearch" class="btn btn-primary btn-sm" />
            <input type="button" value="Reset  " id="btnResetSearch" class="btn btn-primary btn-sm" />
        </div>
    </div>
</div>
