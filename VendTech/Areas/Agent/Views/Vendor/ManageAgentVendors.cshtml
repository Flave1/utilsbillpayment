@model PagingResult<VendorListingModel>
@{
    ViewBag.Title = "Manage Vendors";
    Layout = "~/Areas/Agent/Views/Shared/_AgentLayOut.cshtml";
}

<div class="container-fluid" id="pcont">
    <div class="page-head">
        <h2>Manage Vendors</h2>

    </div>
    <div class="cl-mcont">
        <div class="row">
            <div class="col-md-12">
                <div class="block-flat">
                    <div class="header noborder">
                        <h3 class="">
                            <a href="@Url.Action("AddEditVendor", "Vendor", new { area = "Agent" })" class="btn btn-primary pull-right" title="Add Vendor"><i class="fa fa-user "></i><super><i class="fa fa-plus"></i></super></a>
                        </h3>
                    </div>
                    <div class="content">
                        <div class="table-responsive">
                            @Html.Partial("_SearchFilter", new PagingModel { SortBy = "CreatedAt", SortOrder = "Desc" })
                            <div id="divResult">
                                <table class="table table-bordered" id="datatable-icons">
                                    <thead>
                                        <tr>
                                            <th>VENDOR NAME</th>
                                            <th>Agency</th>
                                            <th>BALANCE</th>
                                            <th>ACTION</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @Html.Partial("Partials/_vendorListing", Model)
                                    </tbody>
                                </table>
                            </div>

                        </div>
                        @Html.Partial("_Paging")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/Scripts/UserDefinedScripts/paging.js"></script>
    <script type="text/javascript">
        var totalCount = "@Model.TotalCount";
    </script>
    <script src="~/Scripts/AgentScripts/vendor.js"></script>



    <script type="text/javascript">

        $(document).ready(function () {
            //initialize the javascript
            App.init();
            Users.ManageUsers(totalCount);
        });
    </script>
}

