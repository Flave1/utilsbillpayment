﻿@model PagingResult<DashboardBalanceSheetModel>

@{
    Layout = null;
}

<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr style="background: #404040; color: white; font-weight: bold; word-spacing:10px; ">

                <th>
                    <i class="fa fa-refresh fa-spin fa-3x fa-fw" style="font-size:20px;" aria-hidden="true"></i>
                    <span class="sr-only">Refreshing...</span>
                </th>
                <th colspan="6">
                    <strong style="font-size: 20px;">
                        VENDORS FINANCIAL POSITION/STATUS
                    </strong>
                </th>
            </tr>
            <tr>
                <th scope="col">#</th>
                <th scope="col">STATUS</th>
                <th scope="col">VENDOR</th>
                <th scope="col">TOTAL DEPOSITS</th>
                <th scope="col">TOTAL PURCHASES</th>
                <th scope="col">DIFFERENCE</th>
                <th scope="col">POS BALANCE</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.List != null)
            {
                int i = 0;
                foreach (var item in Model.List)
                {
                    //@Url.Action("Recharge", "Meter", new { meterId = item.MeterId })<a title="Recharge" class="recharge col-md-4" data-id="@item.MeterId" href='#'> </a>
                    i += 1;
            <tr id="meterList">
                <th scope="row">@i</th>
                <td>
                    @if (item.Status == "green")
                    {
                        <img src="https://uxwing.com/wp-content/themes/uxwing/download/48-checkmark-cross/done.svg" width="20" alt="Alternate Text" />
                    }
                    else
                    {
                        <img src="https://uxwing.com/wp-content/themes/uxwing/download/26-signs-symbols/red-alert.svg" width="20" alt="Alternate Text" />
                    }
                </td>
                <td style="font-weight:bold"> @item.Vendor </td>
                <td style="font-weight:bold">@string.Format("{0:N0}", item.DepositAmount)</td>
                <td style="font-weight:bold">@string.Format("{0:N0}", item.SaleAmount)</td>
                <td>
                    @if (item.Status == "red")
                    {
                        <span style="color: red; font-weight: bold;">@string.Format("{0:N0}", item.Balance)</span>
                    }
                    else
                    {
                        <span style="color:black;font-weight:bold;">@string.Format("{0:N0}", item.Balance)</span>
                    }
                </td>
                <td style="font-weight:bold">@string.Format("{0:N0}", item.POSBalance)</td>


            </tr>
                }
            }


        </tbody>
    </table>
</div>