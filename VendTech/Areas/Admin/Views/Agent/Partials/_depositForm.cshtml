<style>
    #percentageAmount {
        font-size: 50px;
        height: 55px;
        border: none;
        text-align: right;
        color: red !important;
        font-weight: bold;
    }

    .modal-dialog {
        margin-top: 2%;
    }

    #amountDisplay {
        font-size: 20px;
        text-align: right;
        font-weight: bold;
        color: #e81500 !important;
        width: 50%;
    }

    #amountDisplay2 {
        font-size: 30px;
        text-align: right;
        font-weight: bold;
        color: #00a2e8 !important;
        width: 50%;
        border: none;
    }
    .otpSent{
        display: none;
    }
    .k-header{
        width: 50% !important;
    }
</style>
<div id="depositToAgencyAdminModal" class="modal fade" role="dialog">
    <div class="modal-dialog" style=" margin-right:-0%; ">

        <!-- Modal content-->
        <div class="modal-content" style="height: 680px">
            <div class="modal-header d-flex justify-content-between">
                <h4 class="modal-title">Deposit Uploader</h4>
                <button type="button" class="close" data-dismiss="modal" onclick="superAdminTransferHandler.resetForm()">&times;</button>
            </div>
            <br /><br />
            <div class="modal-body">

                <div class="form-group row">
                    <h3 style="padding-left: 10px; margin-top: -40px; color:#00a2e8;">
                        <strong id="agencyAdminDisplayName">AFRO INTERNATION - AGT - 93000</strong>
                    </h3>
                </div>

                <div class="form-group row">
                    <label class="col-4">BANK ACCOUNT</label>
                    @Html.DropDownList("BankAccountId", new SelectList(ViewBag.bankAccounts, "value", "text"), null, new {@class = "form-control col-6", @id = "bankAccountId" })
                </div>

                <div class="form-group row">
                    <label class="col-4">CHX/CASH</label>
                    @Html.DropDownList("DepositType", new SelectList(ViewBag.DepositTypes, "value", "text"), null, new { @class = "form-control col-6", @onchange = "superAdminTransferHandler.onPaymentTypeChange()", @id = "paymentType" })
                </div>
                <div class="form-group row chkBankDiv" style="display:none;">
                    <label class="col-4">VALUE DATE</label>
                    <input type="text" style="font-weight: bold;" class="form-control col-6" autocomplete="off" name="ValueDate" id="valueDate">
                </div>
                <div class="form-group row chkBankDiv" style="display: none">
                    <label class="col-4">BANK</label>
                    @Html.DropDownList("ChkBankName", null, "SELECT BANK", new { @class = "form-control col-6", @id = "bank" })
                </div>
                <div class="form-group row chkBankDiv" style="display: none">
                    <label class="col-4">NAME ON CHEQUE</label>
                    <input type="text" id="nameOnCheque" name="NameOnCheque" style="width: 50%;" class="form-control col-6">
                </div>
                <div class="form-group row">
                    <label class="col-4">CHX # OR SLIP ID</label>
                    <input type="text" id="chkOrSlipNo" value="0" name="ChkOrSlipNo" style="color: red; text-align: right; font-weight: bold;" class="form-control col-6">
                </div>
                <div class="form-group row">
                    <label class="col-4" >DEPOSIT AMOUNT</label>
                    <input type="text"
                           id="amountDisplay"
                           onkeypress="javascript:return superAdminTransferHandler.isNumber(event)"
                           onkeyup="superAdminTransferHandler.getAmountWithPercentage()"
                           class="form-control col-6">
                    <input type="hidden" id="amount" name="Amount">
                </div>
                <br />
                <div class="form-group row">
                    <label style=" width:31% !important;"></label>
                    <input type="text" id="amountDisplay2">
                </div>

                <div class="row otpSent">
                    <div class="col-3"><a href="javascript:void(0);" onclick="superAdminTransferHandler.resendOtp(this)">RESEND OTP</a></div>
                    <label class="col-3 alert-warning" style=" width:31% !important; ">INPUT OTP HERE <i class="fa fa-arrow-right"></i></label>
                    <input type="text" style="height: 50px; font-weight: bolder; font-size: 40px;" class="form-control col-6" placeholder="ENTER OTP" id="otp">
                </div>
                <div class="row col-md-11">
                    <button type="button" class="btn btn-primary pull-right" id="submitBtn" onclick="superAdminTransferHandler.submit(this)">Submit</button>
                </div>
            </div>

        </div>

    </div>
</div>
