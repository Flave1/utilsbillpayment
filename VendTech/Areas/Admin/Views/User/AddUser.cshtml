@model AddUserModel
@{
    ViewBag.Title = "Add CMS User Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayOut.cshtml";
}

<div class="container-fluid" id="pcont">
    <div class="page-head">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="cl-mcont">
        @Html.Partial("_FunctionCallMessage")
        <div class="row">
            <div class="col-md-12">
                <div class="block-flat">
                    <div class="header">
                        <h3>@ViewBag.Title</h3>
                    </div>
                    <div class="content people-form-cs">
                        <form class="form-horizontal" role="form" id="UserForm" enctype="multipart/form-data">
                            @Html.HiddenFor(x => x.UserId)
                            <div class="form-group">
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">FIRST NAME<em>*</em></label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.FirstName)
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">LAST NAME<em>*</em></label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.LastName)
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">EMAIL<em>*</em></label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.Email)
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">
                                            PASSWORD<em>*</em>

                                        </label>
                                        <div class="col-md-8">
                                            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.Password)

                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">CONFIRM PASSWORD<em>*</em></label>
                                        <div class="col-md-8">
                                            @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.ConfirmPassword)
                                            <reset style="padding-top: 7px;display: inline-block;font-size: 13px;font-weight: 600;">
                                                @Html.CheckBoxFor(p => p.ResetUserPassword) RESET AT LOGIN
                                            </reset>
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">ROLE<em>*</em></label>
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(x => x.UserType, new SelectList(ViewBag.UserTypes, "value", "text"), null, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.UserType)
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">CELLPHONE<em>*</em></label>
                                        <div class="col-md-1">
                                            <select name="CountryCode" class="form-control">
                                                <option value="+232">+232</option>
                                            </select>
                                        </div>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.Phone)
                                        </div>
                                    </div>

                                </div>
                                @*<div class="row">
            <div class=" col-md-12">
                <label for="inputEmail3" class="col-md-2 control-label">Select Profile Pic</label>
                <div class="col-md-8">
                    <input type="file" name="ImagefromWeb">
                </div>
            </div>

        </div>*@
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">PERMISSIONS<em>*</em></label>

                                        <div class=" col-md-8">
                                            @Html.Partial("Partials/_modulesListing", Model.ModuleList)

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">WIDGETS</label>

                                        <div class=" col-md-8">
                                            @Html.Partial("Partials/_widgetsListing", Model.WidgetList)

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class=" col-md-6">
                                        <div class="col-sm-offset-4 col-sm-8">
                                            <input type="button" class="btn btn-primary" id="addUserBtn" value="Submit" />
                                            <a href="@Url.Action("ManageUsers", "user", new { area = "Admin" })" class="btn btn-default">Cancel</a>
                                        </div>
                                    </div>
                                </div>


                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

