@model ICollection<PlatformApiConnectionModel>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayOut.cshtml";

}

<div class="container-fluid" id="pcont">
    <div class="page-head">
        <h2>@Html.Raw(ViewBag.MainPageHeader)</h2>
    </div>
    <div class="cl-mcont">
        <div class="row">
            <div class="col-md-12">
                <div class="block-flat">
                    <div class="header noborder">
                        <h3>
                            <a onclick="return confirm('Are you sure you want to create PAC?');" 
                               href="/Admin/PlatformApi/CreateApiConnection?pid=@ViewBag.PlatformId" 
                               class="btn btn-primary pull-right" title="Create Platform Connection API">
                                <i class="fa fa-plus"></i>
                            </a>
                        </h3>
                    </div>
                    <div class="content">

                        <a href="@Url.Action("ManagePlatforms", "Platform", new { area = "Admin" })">
                            <i class="fa fa-arrow-left"></i>
                            <span>Back</span>
                        </a>

                        <div class="table-responsive">

                            <div id="divResult">
                                <table class="table table-bordered" id="datatable-icons">
                                    <thead>
                                        <tr>
                                            <th>#ID</th>
                                            <th class="alignL">NAME</th>
                                            <th>API TYPE</th>
                                            <th>API</th>
                                            <th>STATUS</th>
                                            <th>ACTION</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null && Model.Count() > 0)
                                        {
                                            foreach (var item in Model)
                                            {
                                                <tr class="odd gradeX">
                                                    <td class="alignC">@item.Id</td>
                                                    <td>@item.Name</td>
                                                    <td class="alignC">@item.PlatformApi.ApiTypeName</td>
                                                    <td class="alignC">@item.PlatformApi.Name</td>
                                                    <td class="alignC">@item.StatusName</td>
                                                    <td class="alignC">
                                                        <a class="btn btn-primary btn-xs" href="@Url.Action("EditApiConnection", "PlatformApi", new { area = "Admin", id = @item.Id })" data-original-title="Edit" data-toggle="tooltip">Edit</a>
                                                        <a class="btn btn-primary btn-xs" href="@Url.Action("ConfigureApiConnection", "PlatformApi", new { area = "Admin", id = @item.Id })" data-original-title="Config" data-toggle="tooltip">Config</a>

                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr class="odd gradeX">
                                                <td colspan="6">No Record Found</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script type="text/javascript">
    </script>
    <script src="~/Scripts/AdminScripts/platform.js"></script>
    <script src="~/Scripts/AdminScripts/bankAccount.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            //initialize the javascript
            App.init();
        });
    </script>
}




