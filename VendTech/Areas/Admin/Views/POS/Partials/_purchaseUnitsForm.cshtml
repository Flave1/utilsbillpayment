<style>
    .modal-dialog {
        margin-top: 2%;
    }

    
</style>
<div id="purchaseUnitFormModal" class="modal fade" role="dialog">
    <div class="modal-dialog" style=" margin-right:-0%; ">

        <!-- Modal content-->
        <div class="modal-content" style="height: 380px">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" onclick="purchaseUnitsByAdmin.resetForm()">&times;</button>
                <h4 class="modal-title">PURCHASE VOUCHER</h4>
            </div>
            <div class="modal-body">
              
                <div class="form-group row">
                    <div class="form-group">
                        <p>
                            <strong>VENDOR: <span id="vendor">  AFRO INTERNATION  </span> </strong>
                        </p>
                        <p>
                            <strong>METER #: <span id="meternumber">12426576486</span></strong>
                        </p>
                        <p>
                            <strong>POS ID: <span id="pos">90043</span></strong>
                        </p>
                        <p>
                            <strong> BALANCE: <span id="purchaseBalance">90043</span></strong>
                        </p>
                       
                    </div>
                    <div class="form-group row">
                        <label for="staticEmail" style="font-weight:bold;" class="col-sm-2 col-form-label">AMOUNT:</label>
                        <div class="col-sm-6">
                            <input type="text"
                                   id="purchaseAmount"
                                   name="purchaseAmount"
                                   onkeypress="javascript:return purchaseUnitsByAdmin.isNumber(event)"
                                   class=" form-control">
                        </div>
                    </div>
                    
                    
                </div>


                <div class="row col-md-11">
                    <button type="button" class="btn btn-primary pull-right" id="purchaseUnitsBtn" onclick="AdminPOS.purchase2(this)">Submit</button>
                </div>
            </div>

        </div>

    </div>
</div>

<div class="modal fade" id="modalCart">
    @Html.Partial("_voucherReceipt")
</div>