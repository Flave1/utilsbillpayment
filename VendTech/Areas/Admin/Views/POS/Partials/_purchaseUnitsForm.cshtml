<style>
    .modal-dialog {
        margin-top: 2%;
    }
</style>
<div id="purchaseUnitFormModal" class="modal fade" role="dialog">
    <div class="modal-dialog" style=" margin-right:-0%; ">

        <!-- Modal content-->
        <div class="modal-content" style="height: 700px; padding: 20px;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" onclick="purchaseUnitsByAdmin.resetForm()">&times;</button>
            </div>

            <div class="modal-header">
                <h4 style="padding: 10px;font-size:45px;text-align: center;" class="modal-title">EDSA RECHARGE</h4>
                <span style="font-size:3vw;font-weight: bold;text-align: center;color: deepskyblue;/* padding: 160px; */" id="purchaseBalance">3,300.00</span>
            </div>
            @*<div class="modal-header">
                <h4 style=" padding: 10px; font-size:45px; text-align: center;" class="modal-title">EDSA RECHARGE</h4>
                <span style="font-size:3vw; font-weight: bold; text-align: center; color: deepskyblue; padding: 160px; " id="purchaseBalance"></span>
            </div>*@
            <div class="modal-body" style="padding: 20px;  border-top: 2px solid gray;">

                <div class="form-group row">
                    <div class="form-group">

                        <p style="font-size:25px">
                            <strong>VENDOR: <span id="vendor">  AFRO INTERNATION  </span> </strong>
                        </p>
                        <BR><BR>
                        <p style="font-size:25px; font-weight:bold;">
                            <strong>POS ID: <span id="pos">90043</span></strong>
                        </p>
                    </div>


                    <div class="form-group">

                        <BR>
                        <h3 id="error_message" class="text-danger" style="display: none;"></h3><BR>
                        <label class="control-label col-sm-12" style="font-weight:bold;">SELECT SAVED METERS:</label>
                        <select class="form-control " style="font-size:25px; width: 400px; height:60px;" id="selectMeter"></select>
                        <BR><BR>
                    </div>

                    <label style="font-weight:bold;" class=" ">AMOUNT:</label>
                    <div class="form-group">

                        <div class="row">
                            <div class="col-sm-6">
                                <input type="text"
                                       id="purchaseAmount"
                                       name="purchaseAmount"
                                       onkeypress="javascript:return purchaseUnitsByAdmin.isNumber(event)"
                                       onkeyup="purchaseUnitsByAdmin.returnAmount()"
                                       class=" form-control"
                                       style="text-align:right; color:red; font-weight:bold; font-size:65px;height:80px; ">
                            </div>
                            <div class="col-sm-6">
                                <p style="font-size:45px">
                                    <button type="button" class="btn btn-primary " style="style=" font-weight:bold; border-radius:5px;" id="purchaseUnitsBtn" onclick="purchaseUnitsByAdmin.submitFormData(this)">PAY NOW</button>
                                </p>
                            </div>
                        </div>
                    </div>


                </div>

            </div>

        </div>

    </div>
</div>

<div class="modal fade" id="modalCart">
    @Html.Partial("_voucherReceipt")
</div>