@model PagingResult<DepositListingModel>
@{
    ViewBag.Title = "Deposit Uploader";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayOut.cshtml";
}

<div class="container-fluid" id="pcont">
    <div class="page-head">
        <h2>Deposit Uploader</h2>

    </div>
    <div class="cl-mcont">
        <div class="row">
            <div class="col-md-12">
                <div class="block-flat">

                    <div class="manage-desposit">
                        <div class="manage-desposit-top">
                            <h3></h3>
                            <label style="font-size: 24px; color: #00a2e8 !important;"> @(ViewBag.Balance == 0 ? "0" : string.Format("{0:N0}", ViewBag.Balance))  SLL</label>
                        </div>
                        <div class="manage-desposit-content divResult" id="divResult">
                            <form>

                                <div class="manage-desposit-content-left">
                                    <div class="manage-desposit-row">
                                        <label>VENDOR</label>
                                        @Html.DropDownList("Vendor", new SelectList(ViewBag.vendors, "value", "text"), "SELECT VENDOR", new { @id = "vendor" })
                                    </div>
                                    <div class="manage-desposit-row">
                                        <label>POS ID</label>
                                        @Html.DropDownList("PosId", null, "SELECT POS", new { @onchange = "changeVendor()", @id = "vendorId" })
                                       
                                    </div>
                                    <div class="manage-desposit-row">
                                        <label>BANK ACCOUNT</label>
                                        @Html.DropDownList("BankAccountId", new SelectList(ViewBag.bankAccounts, "value", "text"), null, new { })
                                    </div>
                                    <div class="manage-desposit-row">
                                        <label>CHX/CASH</label>
                                        @Html.DropDownList("DepositType", new SelectList(ViewBag.DepositTypes, "value", "text"), null, new { @onchange = "onPaymentTypeChange()", @id = "paymentType" })
                                    </div>

                                    <div class="manage-desposit-row chkBankDiv" style="display:none">
                                        <label>BANK</label>
                                        @*<input type="text" id="ChkBankName" name="ChkBankName">*@
                                        @Html.DropDownList("ChkBankName", null, "SELECT BANK")
                                    </div>
                                    <div class="manage-desposit-row chkBankDiv" style="display:none">
                                        <label>NAME ON CHEQUE</label>
                                        <input type="text" id="NameOnCheque" name="NameOnCheque">
                                    </div>
                                    <div class="manage-desposit-row">
                                        <label>CHX # OR SLIP ID</label>
                                        <input type="number" id="ChkOrSlipNo" name="ChkOrSlipNo">
                                    </div>
                                    <div class="manage-desposit-row">
                                        <label>DEPOSIT AMOUNT</label>
                                        <input type="text" style="font-size: 24px; color: #00a2e8 !important;" id="amountDisplay" onkeypress="javascript:return isNumber(event)" onkeyup="getAmountWithPercentage()">
                                        <input type="hidden" id="amount" name="Amount">
                                    </div>
                                    <input type="hidden" name="UserId" value="@ViewBag.vendorId" />
                                    <div class="manage-desposit-row">
                                        <label>PLUS <span id="agentPercentage">@ViewBag.percentage</span>%</label>
                                        @*<span ></span>*@
                                        <input type="text" id="percentageAmount" style="font-size: 24px; color: #00a2e8 !important;" readonly />
                                        <input type="hidden" name="TotalAmountWithPercentage" id="percentageAmountHdn" />
                                    </div>
                                    @*<div class="manage-desposit-row">
                                            <label>COMMENTS</label>
                                            <textarea name="Comments"></textarea>
                                        </div>*@
                                    <div class="manage-desposit-row">
                                        <button class="savebttn addDepositBtn" type="button">SUBMIT</button>
                                    </div>
                                </div>
                            </form>

                            <div class="manage-desposit-content-right">
                                <table class="table table-bordered" id="datatable-icons">
                                    <thead>
                                        <tr>
                                            <th>POS ID</th>
                                            <th>USER NAME</th>
                                            <th>DATE</th>
                                            <th>PAYMENT TYPE</th>
                                            <th>REF #</th>
                                            <th>AMOUNT</th>
                                            <th>%</th>
                                            <th>STATUS</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @Html.Partial("Partials/_depositListing", Model)
                                    </tbody>

                                    @*@if (Model.List != null)
                                        {
                                            foreach (var item in Model.List)
                                            {
                                                <tr>
                                                    <td style="text-align:right;">@item.PosNumber</td>
                                                    <td>@item.UserName</td>
                                                    <td style="text-align:right;">@item.CreatedAt.ToString()</td>
                                                    <td>@item.Type</td>
                                                    <td style="text-align:right;">@item.ChkNoOrSlipId</td>
                                                    <td style="text-align:right;">@(item.Amount == null ? "0" : string.Format("{0:N0}", item.Amount))</td>
                                                    <td style="text-align:right;">@(item.PercentageAmount == null ? "0" : string.Format("{0:N0}", item.PercentageAmount))</td>
                                                    <td>@item.Status</td>
                                                </tr>
                                            }
                                        }*@
                               
                                </table>
                            </div>
                            @Html.Partial("_Paging")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/Scripts/UserDefinedScripts/paging.js"></script>
    <script type="text/javascript">
        var totalCount = "@Model.TotalCount";
    </script>
    <script src="~/Scripts/AdminScripts/deposit.js"></script>

    <script type="text/javascript">
        function changeVendor() {
            window.location.href = '/Admin/Deposit/ManageDeposits?posId=' + $("#vendorId").val() + "&vendorId=" + $("#vendor").val();
        }
        function onPaymentTypeChange() {
            if ($("#paymentType").val() == "2")
                $(".chkBankDiv").show();
            else {
                $(".chkBankDiv").hide();
                $("#ChkBankName").val('');
                $("#NameOnCheque").val('');
            }
        }

        function thousands_separators(num) {
            var num_parts = num.toString().split(".");
            num_parts[0] = num_parts[0].replace(/\B(?=(\d{3})+(?!\d))/g, ",");
            return num_parts.join(".");
        }
        function getAmountWithPercentage() {
            var displayVal = $("#amountDisplay").val();
            var val = "";
            if (displayVal) {
                var cc = displayVal.replace(/\,/g, "");
                $("#amount").val(cc);
                val = $("#amount").val();
                $("#amountDisplay").val(thousands_separators(val));
            }
            if (val && !isNaN(val)) {
                val = parseInt(val);
                var drpValue = '@ViewBag.percentage';
                if (drpValue != "") {

                    var percentageAmt = (drpValue / 100) * val;
                    var percentValue = parseInt(val + percentageAmt);
                    $("#percentageAmountHdn").val(percentValue);
                    $("#percentageAmount").val(thousands_separators(percentValue));
                }
                else {
                    $("#percentageAmountHdn").val(val);
                    $("#percentageAmount").val(thousands_separators(val));
                }
            }
            else {
                $("#percentageAmountHdn").val('');
                $("#percentageAmount").val('');
                $("#amount").val('');
            }
        }
        //$("#searchField").show();
        //var searchFields = ["VENDOR NAME", "USER NAME", "CHEQUE # OR REG ID", "AMOUNT"];
        //for (var i = 0; i < searchFields.length; i++) {
        //    $("#searchField").append("<option value=" + searchFields[i] + ">" + searchFields[i] + "  </option>")
        //}
        function initPosValue(vendorId) {
          
            $("#vendorId").empty();
            $.ajax({
                url: '/Admin/Deposit/GetVendorPosSelectList?userId=' + vendorId,
                success: function (res) {
                    $("#vendorId").append("<option value=''> SELECT POS</option>")
                    if (res.posList != null) {
                        for (var i = 0; i < res.posList.length; i++) {
                            $("#vendorId").append("<option value=" + res.posList[i].Value + ">" + res.posList[i].Text + "</option>")
                        }
                        $("#vendorId").val(@ViewBag.posId_);

                    }
                }
            })
        }
        $(document).ready(function () {

           
            var venderid=@ViewBag.vendorId;

            if (venderid!=0) {
                 $("#vendor").val(@ViewBag.vendorId);

            if ($("#vendor").val() != 0)
            {
                initPosValue(@ViewBag.vendorId);
            }
            }
           



            App.init();
            Deposits.ManageDeposits(totalCount);
            onPaymentTypeChange();


            $("#vendor").on("change", function () {
                var vendorId = $("#vendor").val();
                $("#vendorId").empty();
                if (vendorId)
                {
                    $.ajax({
                        url: '/Admin/Deposit/GetVendorPosSelectList?userId=' + vendorId,
                        success: function (res) {
                            $("#vendorId").append("<option value=''> SELECT POS</option>")
                            if (res.posList != null) {
                                for (var i = 0; i < res.posList.length; i++)
                                {
                                    $("#vendorId").append("<option value=" + res.posList[i].Value + ">" + res.posList[i].Text + "</option>")
                                }
                            }
                        }
                    })
                }
                else {
                    $("#vendorId").append("<option value=''> SELECT POS</option>")
                }
            });
        });
        function isNumber(evt) {
            var iKeyCode = (evt.which) ? evt.which : evt.keyCode
            if (iKeyCode > 31 && (iKeyCode < 48 || iKeyCode > 57))
                return false;
            return true;
        }
    </script>
}

