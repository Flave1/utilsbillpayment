@model ChequeBankModel
@{
    ViewBag.Title = "Edit Bank Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayOut.cshtml";
}
<div class="container-fluid" id="pcont">
    <div class="page-head">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="cl-mcont">
        @Html.Partial("_FunctionCallMessage")
        <div class="row">
            <div class="col-md-12">
                <div class="block-flat">
                    <div class="header">
                        <h3>@ViewBag.Title</h3>
                    </div>
                    <div class="content people-form-cs">
                        <form class="form-horizontal" role="form" id="UserForm">
                            @Html.HiddenFor(x => x.ChequeBanktId)
                            <div class="form-group">
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">BANK NAME<em>*</em></label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.BankName, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.BankName)
                                        </div>
                                    </div>

                                </div>  
                            
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">ABBREVIATION<em>*</em></label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.BBAN, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.BBAN)
                                        </div>
                                    </div> 
                                </div>
                               
                                <div class="row">
                                    <div class=" col-md-6">
                                        <div class="col-sm-offset-4 col-sm-8">
                                            <input type="button" class="btn btn-primary" id="editUserBtn" value="Submit" />
                                            <a href="@Url.Action("ManageChequeBanks", "ChequeBanks", new { area = "Admin" })" class="btn btn-default">Cancel</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/AdminScripts/checkbank.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            App.init();
        });
    </script>
}