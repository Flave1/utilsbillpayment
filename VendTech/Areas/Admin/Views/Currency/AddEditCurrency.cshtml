@model VendTech.BLL.Models.CurrencyModel.SaveCurrencyModel
@{
    ViewBag.Title = !string.IsNullOrEmpty(Model.CurrencyCode) ? "Edit Currency and Country Details" : "Add Currency and Country Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayOut.cshtml";
}


<div class="dashright ">
    @Html.Partial("_FunctionCallMessage")
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <style>
        th {
            text-align: left !important;
        }

        .custom {
            width: 42px;
            height: 38px;
            border-color: #95a2a2;
            line-height: 50px;
            text-align: center;
            font-size: 24px;
            border-radius: 5px;
        }

        ._passcode .form-control {
            font-size: 40px;
        }
    </style>

    <div class="page-head">
        <h2>Manage Currency and country</h2>
    </div>
    <div class="cl-mcont">
        <div class="row">
            <div class="col-md-21">
                <div class="block-flat">

                    <form class="form-horizontal" role="form" id="UserForm" style=" background:#ffffff; margin:5px; border-radius: 10px">
                        <div class="row">
                            <div class="col-md-4">
                                <div style="border:1px solid #c0bbcb; padding:4px;">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label for="inputEmail3" class="col-md-5 control-label">Currency Code<em>*</em></label>
                                            <div class="col-md-6">
                                                <input type="text" class="form-control" @ViewBag.read name="CurrencyCode" value="@Model.CurrencyCode" />
                                                @Html.ValidationMessageFor(x => x.CurrencyCode)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label for="inputEmail3" class="col-md-5 control-label">Currency Name<em>*</em></label>
                                            <div class="col-md-6">
                                                <input type="text" class="form-control" name="CurrencyName" value="@Model.CurrencyName" />
                                                @Html.ValidationMessageFor(x => x.CurrencyName)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label for="inputEmail3" class="col-md-5 control-label">Country Code<em>*</em></label>
                                            <div class="col-md-6">
                                                <input type="text" class="form-control"  name="CountryCode" value="@Model.CountryCode" />
                                                @Html.ValidationMessageFor(x => x.CountryCode)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label for="inputEmail3" class="col-md-5 control-label">Country Name<em>*</em></label>
                                            <div class="col-md-6">
                                                <input type="text" class="form-control"  name="CountryName" value="@Model.CountryName" />
                                                @Html.ValidationMessageFor(x => x.CountryName)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class=" col-md-12" style="text-align:right;">
                                <a href="@Url.Action("ManageCurrency", "Currency", new { area = "Admin" })" class="btn btn-default">Cancel</a>
                                <input type="button" class="btn btn-primary" id="addCurrencyBtn" value="Submit" />
                            </div>
                        </div>

                    </form>


                </div>
            </div>
        </div>
    </div>
</div>



@section scripts{
    <script src="~/Scripts/AdminScripts/currency.js"></script>
    <script>

    //$(document).ready(function () {

    //    });
    </script>
}