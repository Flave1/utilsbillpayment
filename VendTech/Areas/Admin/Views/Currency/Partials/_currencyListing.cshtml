﻿@model PagingResult<VendTech.BLL.Models.CurrencyModel.CurrencyListingModel>


@if (Model.List != null && Model.List.Count() > 0)
{
    foreach (var item in Model.List)
    {
        <tr class="odd gradeX">
            <td>@item.CurrencyName</td>
            <td> @item.CurrencyCode</td>
            <td> @item.CountryName</td>
            <td>@item.CountryCode</td>
            <td>
                <a data-id="@item.CurrencyCode" class="btn btn-primary btn-xs editCurrency" href="@Url.Action("AddEditCurrency", "Currency", new { area = "Admin", id = @item.CurrencyCode })" ; style="border: none; padding-left: 5px; padding-right: 5px" data-original-title="Edit" data-toggle="tooltip">Edit</a>
                @if (!item.isDeleted)
                {
                    <a data-id="@item.CurrencyCode" class="btn btn-success btn-xs disableCurrency" href="javascript:void(0);" style="background:green; border:none;" data-original-title="Disable" data-toggle="tooltip">Disable</a>
                }
                else
                {
                    <a data-id="@item.CurrencyCode" class="btn btn-warning btn-xs enableCurrency" href="javascript:void(0);" ; style="background: red; border: none;" data-original-title="Enable" data-toggle="tooltip">Enable</a>
                }
            </td>
        </tr>
    }
}
else
{
    <tr class="odd gradeX">
        <td colspan="7">No Records Found</td>
    </tr>
}


