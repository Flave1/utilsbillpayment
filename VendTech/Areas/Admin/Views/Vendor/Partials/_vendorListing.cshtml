@model PagingResult<VendorListingModel>
@{
    var user = (UserDetails)ViewBag.LOGGEDIN_USER;
}

@if (Model.List != null && Model.List.Count() > 0)
{
    foreach (var item in Model.List)
    {
    <tr class="odd gradeX">
        <td>
            <a href="@Url.Action("Pos", "Vendor", new { area = "Admin", id = @item.StringId })" data-original-title="Detail" data-toggle="tooltip">@item.VendorName</a>
        </td>
        <td>@item.Name</td>
        <td>@item.SurName</td>

        <td> @item.AgencyName</td>

        <td><span>+232 </span> @item.Phone</td>
        <td>
            <a class="btn btn-primary btn-xs" href="@Url.Action("AddEditVendor", "Vendor", new { area = "Admin", id = @item.StringId })" data-original-title="Edit" data-toggle="tooltip">Edit</a>
            @*<a class="btn btn-warning btn-xs" href="@Url.Action("Detail", "Vendor", new { area = "Admin", id = @item.StringId })" data-original-title="Detail" data-toggle="tooltip">Detail</a>*@
            @if (user.UserType == UserRoles.Admin)
            {
                <a data-userid="@item.VendorId" class="btn btn-danger btn-xs deleteUser" href="javascript:void(0);" data-original-title="Remove" data-toggle="tooltip">Delete</a>
            }
        </td>
    </tr>
    }
}
else
{
    <tr class="odd gradeX">
        <td colspan="6">No Record Found</td>
    </tr>
}


