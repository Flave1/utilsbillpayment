@model VendTech.BLL.Models.AutoRelease

@{
    Layout = "~/Views/Shared/_ordinaryLayout.cshtml";
}
<style>
    body {
        background-color: #f0f0f0;
    }

    .container {
        text-align: center;
        padding: 20px;
    }

    .alert-heading {
        font-size: 24px;
        margin-bottom: 10px;
    }

    .alert-success {
        display: inline-block;
        padding: 20px 30px;
        border-radius: 10px;
        background-color: #d4edda;
        color: #155724;
        font-size: 20px;
    }

    .success-icon {
        margin-right: 10px;
        color: #155724;
    }

    .btn {
        font-size: 18px;
    }

    .alert-danger {
        display: inline-block;
        padding: 20px 30px;
        border-radius: 10px;
        background-color: #f8d7da;
        color: #721c24;
        font-size: 20px;
    }

    .error-icon {
        margin-right: 10px;
        color: #721c24;
    }

</style>

<div class="container">

    @if (Model.Success)
    {
        <div class="alert alert-success" role="alert">
            <span class="success-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                    <path d="M8.5 0a8.5 8.5 0 1 1 0 17 8.5 8.5 0 0 1 0-17zm3.446 5.97a.5.5 0 0 0-.706-.116L7.5 10.793 5.706 8.999a.5.5 0 1 0-.708.708l2.5 2.5a.5.5 0 0 0 .708 0l4.5-4.5a.5.5 0 0 0 .116-.691z" />
                </svg>
            </span>
            <span class="alert-heading">@Html.Raw(Model.Message)</span>
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            <span class="error-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-exclamation-triangle" viewBox="0 0 16 16">
                    <path d="M.71 14.71a1 1 0 0 1 0-1.42L7.57 7.3a1 1 0 0 1 1.41 0l6.85 6.85a1 1 0 0 1-1.42 1.42L8 8.42 1.13 15.29a1 1 0 0 1-1.42 0zM8 6a1 1 0 0 1 1 1v4a1 1 0 0 1-2 0V7a1 1 0 0 1 1-1z" />
                </svg>
            </span>
            <span class="alert-heading">@Html.Raw(Model.Message)</span>
        </div>
    }





    <div class="mb-3">
        <a href="/Admin/Home/Index" type="button" class="btn btn-warning me-2">Login to Dashboard</a>
        @*<button type="button" class="btn btn-secondary">Close</button>*@
    </div>
</div>

<!-- Bootstrap JS (optional) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

