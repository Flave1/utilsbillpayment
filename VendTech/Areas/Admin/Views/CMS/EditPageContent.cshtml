@model EditCMSPageModel
@{
    ViewBag.Title = "Edit Page Content";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayOut.cshtml";
}

<div class="container-fluid" id="pcont">
    <div class="page-head">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="cl-mcont">
        @Html.Partial("_FunctionCallMessage")
        <div class="row">
            <div class="col-md-12">
                <div class="block-flat">
                    <div class="header">
                        <h3>@ViewBag.Title</h3>
                    </div>
                    <div class="content people-form-cs">
                        <form class="form-horizontal" role="form" id="PageForm">
                            @Html.HiddenFor(x => x.PageId)
                            <div class="form-group">

                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">PAGE NAME<em>*</em></label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.PageName, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.PageName)
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">PAGE TITLE<em>*</em></label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.PageTitle, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.PageTitle)
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">PAGE CONTENT</label>
                                        <div class="col-md-10">
                                            @Html.TextAreaFor(x => x.PageContent)
                                            @Html.ValidationMessageFor(m => m.PageContent)
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">META TITLE</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.MetaTitle, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.PageTitle)
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">META RECORDS</label>
                                        <div class="col-md-8">
                                            @Html.TextAreaFor(x => x.MetaKeywords, 4, 30, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.MetaKeywords)
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">META DESCRIPTION</label>
                                        <div class="col-md-8">
                                            @Html.TextAreaFor(x => x.MetaDescription, 4, 30, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.MetaDescription)
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class=" col-md-6">
                                        <div class="col-sm-offset-4 col-sm-8">
                                            <input type="button" class="btn btn-primary" id="addPageBtn" value="Submit" />
                                            <a href="@Url.Action("CMSManager", "cms", new { area = "Admin" })" class="btn btn-default">Cancel</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Content/themes/ckeditor.new/ckeditor.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            App.init();
            CKEDITOR.env.isCompatible = true;
            CKEDITOR.replace('PageContent');

        });
    </script>
    <script src="~/Scripts/AdminScripts/cmsPages.js"></script>
}