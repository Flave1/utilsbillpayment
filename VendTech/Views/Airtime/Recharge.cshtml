                                                        {
                                                            <div class=" col-md-4">
                                                                <label class="control-label">SELECT POS ID</label>
                                                                @Html.DropDownList("PosId", new SelectList(ViewBag.userPos, "value", "text"), null, new { @style = "height:35px; font-weight:bolder; ", @class = " input form-control", @id = "posDrp" })
                                                            </div>
                                                        }
