@model LoginAPIModel
@{
    ViewBag.Title = "User Login";
    Layout = "~/Views/Shared/_beforeLoginUserLayout.cshtml";
}
<link href="/Content/sweetalert.css" rel="stylesheet" />
<div id="cl-wrapper" class="login-container">

    <div class="middle-login">
        <div class="block-flat">
            <div class="header">
                <h3 class="text-center"><a href="/"><img class="logo-img" src="@Url.Content("~/Content/images/logo.jpg")" alt="logo" /></a></h3>
            </div>
            <div>
                <form style="margin-bottom: 0 !important;" class="form-horizontal" id="loginForm">
                    <div class="content">
                        <h4 class="title">Login Access to User Panel</h4>
                        @Html.Partial("_FunctionCallMessage")
                        @*<div class="form-group">
                            <div class="col-sm-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-users"></i></span>
                                    <select id="platformChangeDrp">
                                        <option value="/Home/Index">App User/Vendor Login</option>
                                        <option value="/Admin/Home/Index">Admin Login</option>
                                    </select> 
                                </div>
                            </div>
                        </div>*@
                        <div class="form-group">
                            <div class="col-sm-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Username*" })

                                </div>
                                <div id="email-error">@Html.ValidationMessageFor(m => m.Email)</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password*" })
                                </div>
                                <div id="password-error">@Html.ValidationMessageFor(m => m.Password)</div>
                            </div>
                        </div>

                    </div>
                 

            </div>
            <div class="foot">
                <button class="btn btn-primary" id="signInBtn" data-dismiss="modal" type="button">Log me in</button>
                <a class="btn btn-warning" href="/Home/ForgotPassword">Forgot Password</a>
            </div>
            </form>
        </div>
        </div>
        <div class="text-center out-links"><a href="#">&copy; Copyright @DateTime.Now.Year Vendtech, Inc. All Rights Reserved</a></div>
    </div>

</div>
@section scripts{
    <script src="~/Scripts/UserScripts/login.js"></script>
    <script>
        $(function () {
            $("#platformChangeDrp").change(function () {
                window.location.href = this.value;
            });
        })
    </script>
}
