﻿
@{
    var user = (UserDetails)ViewBag.LOGGEDIN_USER;
}

<style>
    .mob_menu_parent {
        width: 100%;
        text-align: center;
    }

    .mob_menu_child {
        display: inline;
        float: left;
        width: 33%;
    }

        .mob_menu_child img {
            max-width: 100%; /* Ensures the image is responsive */
            height: 30px;
        }
</style>
<!-- Fixed navbar -->
<div id="head-nav" class="navbar navbar-default navbar-fixed-top">
    <div id="mobile-nav" class="mob_menu_parent">
        <div  class="mob_menu_child" onclick="openCloseMobileSideBar()">
            @*<i class="fa fa-bars" style="font-size:30px;">MENU</i>*@
            <i class="fa fa-bars" style="font-size:30px;">&nbsp&nbspMENU</i>
        </div>
        <div class="mob_menu_child">
            <a href="/home/dashboard"><img src="@Url.Content("~/Content/images/logo1.jpg")" width="100" alt="LOGO" /></a>

        </div>
        <div class="mob_menu_child">
            <a class="btn my-2 my-sm-0 bg-darkgray" href="@Url.Action("SignOut", "Home")">SIGN OUT</a>
        </div>
    </div>
    <div class="container-fluid" id="main-container-menu">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"> <span class="fa fa-gear"></span> </button>
            <a class="navbar-brand" href="/home/dashboard"><span>Agent Panel</span></a>
        </div>
        <div class="navbar-collapse collapse" id="navbar-profile">


            <ul class="nav navbar-nav navbar-right user-nav">
                <li class="dropdown profile_menu" id="profile_menu" onclick="toggleOpenClass()">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        @if (!string.IsNullOrEmpty(user.ProfilePicPath))
                        {
                            <img alt="" @*src="~/Content/images/avatar2.jpg"*@ class="profilepictureclass" src="@(user.ProfilePicPath!=null?user.ProfilePicPath:@Url.Content("~/Content/images/avatar2.jpg"))" />
                        }
                        <span style="text-transform:uppercase; font-size:30px; font-weight: bold;">@user.VendorName</span> <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li class="divider"></li>
                        <li><a href="@Url.Action("SignOut", "Home")">Sign Out</a></li>
                    </ul>
                </li>
            </ul>
        </div>
        <!--/.nav-collapse animate-collapse -->
    </div>
</div>

<style>
    .profilepictureclass {
        width: 53px;
        height: 39px;
    }
</style>