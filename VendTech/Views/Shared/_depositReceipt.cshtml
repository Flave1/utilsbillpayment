@model DepositListingModel


<div class="modal-dialog modal-md">
    <div class="modal-content modal-md">
        <div class="modal-body">

            <div class="" id="re-printSection">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div class="row" style="text-align:center; margin-left:50px;">
                    <img src="~/Content/images/ventech.png" width="90" />
                </div>
                <div class="row" style="text-align:center; margin-left:25px;" id="gen-invoice">
                    <div class="row" style="font-weight:bold; font-size:30px;"><span class="text-muted">V</span>ENDTECH</div>
                    <h3>INVOICE</h3>
                </div>

                <table style="border-top:0.8px solid grey; margin:auto; width:90%;">
                    <tbody>
                        <tr>
                            <td>Invoice Date : </td>
                            <td> @Model.CreatedAt </td>
                        </tr>
                        <tr>
                            <td>Value Date :</td>
                            <td> @Model.ValueDate</td>
                        </tr>
                        <tr>
                            <td>Customer Name :</td>
                            <td>@Model.VendorName</td>
                        </tr>
                        <tr>
                            <td>POS ID : </td>
                            <td>@Model.PosNumber</td>
                        </tr>
                        <tr>
                            <td style="font-weight: bold;">Transaction or Invoice ID :</td>
                            <td>@Model.TransactionId</td>
                        </tr>
                        <tr>
                            <td>Payment Type :</td>
                            <td>@Model.Type</td>
                        </tr>
                        <tr>
                            <td>Payer :</td>
                            <td>
                                @if (!string.IsNullOrEmpty(Model.Payer))
                                {
                                    <span>@Model.Payer</span>
                                }
                                else
                                {
                                    <span> @Model.VendorName</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td>Payer bank :</td>
                            <td>
                                @if (string.IsNullOrEmpty(Model.IssuingBank))
                                {
                                    <span>N/A</span>
                                }
                                else
                                {
                                    <span>@Model.IssuingBank</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td>Invoice / PO REF # :</td>
                            <td>
                                <span>@Model.ChkNoOrSlipId</span>
                            </td>
                        </tr>
                        <tr>
                            <td>Paid to VTECH Bank :</td>
                            <td>
                                @if (string.IsNullOrEmpty(Model.Bank))
                                {
                                    <span>N/A</span>
                                }
                                else
                                {
                                    <span>@Model.Bank</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td>Amount :</td>
                            <td>@Model.Amount</td>
                        </tr>
                        @if (Model.PercentageCommission.ToString() != "0.00" && Model.Type != "TRANSFER")
                        {
                            <tr>
                                <td>COMMISSION @@ 1% :</td>
                                <td>
                                    @Model.Commission
                                </td>
                            </tr>

                        }

                        @if (Model.Type == "TRANSFER")
                        {
                            <tr>
                                <td>TOTAL TRANSACTION AMOUNT :</td>
                                <td>@Model.Amount</td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td style="font-weight: bold;">TOTAL TRANSACTION AMOUNT</td>
                                <td style="font-weight: bold;">
                                    @Model.PercentageAmount
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>


                <br />
                <div class="row">
                    <div style="width:90%; margin:auto">
                        <div class="col-md-6 col-sm-12"><em>www.vendtechsl.com</em></div>
                        <div class="col-md-6 col-sm-12 text-right"><em>Call +232 76 990 990</em></div>
                        <div class="row" style="text-align:right;">
                            <img src="~/Images/ProfileImages/invoice.png" width="200" />
                        </div>
                    </div>
                </div>
                @*<div class="row" id="emailBox_" style="padding: 30px; display: block;">
                    <div class="modal-body">
                        <form style="width: 100%;">
                            <label for="countryCode">SEND VOUCHER BY EMAIL TO:</label>
                            <div class="mb-2 d-flex justify-content-center">
