@model DepositListingModel
 

<div class="modal-dialog modal-md">
    <div class="modal-content modal-md">
        <div class="modal-body">

            <div class="" id="re-printSection">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div class="row" style="text-align:center;">
                    <img src="~/Content/images/ventech.png" width="90" />
                </div>
                <div class="row" style="text-align:center; margin:5px;" id="gen-invoice">
                    <div class="row" style="font-weight:bold; font-size:30px;"><span class="text-muted">V</span>ENDTECH</div>
                    <h3>INVOICE</h3>
                </div>

                <table style="border-top:0.8px solid grey; margin:auto; width:90%;">
                    <tbody>
                        <tr>
                            <td>Deposit Date : </td>
                            <td> @Model.CreatedAt </td>
                        </tr>
                        <tr>
                            <td>Value Date :</td>
                            <td> @Model.ValueDate</td>
                        </tr>
                        <tr>
                            <td>Vendor Name :</td>
                            <td>@Model.VendorName</td>
                        </tr>
                        <tr>
                            <td>POS ID </td>
                            <td>@Model.PosNumber</td>
                        </tr>
                        <tr>
                            <td>Transaction ID </td>
                            <td>@Model.TransactionId</td>
                        </tr>
                        <tr>
                            <td>Deposit Type </td>
                            <td>@Model.Type</td>
                        </tr>
                        <tr>
                            <td>Payer</td>
                            <td>
                                @if (!string.IsNullOrEmpty(Model.Payer))
                                {
                                    <span>@Model.Payer</span>
                                }
                                else
                                {
                                    <span> @Model.VendorName</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td>Payer bank</td>
                            <td>
                                @if (string.IsNullOrEmpty(Model.IssuingBank))
                                {
                                    <span>N/A</span>
                                }
                                else
                                {
                                    <span>@Model.IssuingBank</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td>Deposit Slip OR REF#</td>
                            <td>
                                <span>@Model.ChkNoOrSlipId</span>
                            </td>
                        </tr>
                        <tr>
                            <td>Payed to VTECH Bank</td>
                            <td>
                                @if (string.IsNullOrEmpty(Model.Bank))
                                {
                                    <span>N/A</span>
                                }
                                else
                                {
                                    <span>@Model.Bank</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td>Amount</td>
                            <td>@string.Format("{0:N0}", Model.Amount)</td>
                        </tr>
                        @if (Model.PercentageCommission.ToString() != "0.00" && Model.Type != "TRANSFER")
                        {
                            <tr>
                                <td>COMMISSION @@ %1</td>
                                <td>@string.Format("{0:N0}", (Model.Amount) * Convert.ToDecimal(Model.PercentageCommission) / 100)</td>
                            </tr>

                        }

                        @if (Model.Type == "TRANSFER")
                        {
                            <tr>
                                <td>TOTAL TRANSACTION AMOUNT</td>
                                <td>@string.Format("{0:N0}", Model.Amount)</td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td>TOTAL TRANSACTION AMOUNT</td>
                                <td>@string.Format("{0:N0}", (Model.Amount) * Convert.ToDecimal(Model.PercentageCommission) / 100 + Model.Amount)</td>
                            </tr>
                        }


                    </tbody>
                </table>

                <br />
                <div class="row">
                    <div style="width:90%; margin:auto">
                        <div class="col-md-6 col-sm-12"><em>www.vendtechsl.com</em></div>
                        <div class="col-md-6 col-sm-12 text-right"><em>Call +232 76 990 990</em></div>
                    </div>
                </div>
                <div class="row modal-footer" style="display:flex;"> 
                    <div class="col-md-5 pull-right" style="margin-left:30px; text-align:left">
                        <span> NOTE: This is an official stamp</span>
                    </div>
                    <div class="col-md-3 pull-right" id="print_section" style="text-align:right">
                        <button class="btn btn-primary waves-effect waves-light " onclick="depositReprint()">PRINT</button>
                    </div>
                </div>
            </div>
           
        </div>

    </div>

</div>
