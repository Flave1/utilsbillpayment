                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" onclick="closeEmailBox()">CANCEL</button>
                        <button type="button" class="btn btn-primary-outline">SEND</button>
                    </div>

                </div>*@
                <div class="row modal-footer" style="display:flex;">
                    <div class="pull-left" style="width: 70%; text-align:left">
                        <i style="font-weight: bold">THIS IS AN OFFICIAL VENDTECH INVOICE</i>
                    </div>
                    <div class="pull-right" id="print_section" style="text-align: right; width: 30%;">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#emailModal">EMAIL</button>
                        <button class="btn btn-primary waves-effect waves-light " onclick="depositReprint()">PRINT</button>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>



