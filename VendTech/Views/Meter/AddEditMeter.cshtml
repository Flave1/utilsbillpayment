@model MeterModel

@{
    ViewBag.title = Model.MeterId > 0 ? "Edit Meter" : "Add Meter";
    Layout = "~/Views/Shared/_Layoutv2.cshtml";
}


@Html.Partial("_Title")

<div class="mt-5">
    <form class="">
        @Html.HiddenFor(m => m.MeterId)
        <div class="form-row">
            <label class=" col-md-8">Meter # <sup style="color:red !important;">*</sup><span style="font-size:11px !important">(EG:11 DIGITS METER NUMBER)</span></label>
            @Html.TextBoxFor(m => m.Number, new { @class = "form-control col-md-6" })
            @Html.ValidationMessageFor(x => x.Number)
        </div>
        <div class="form-row">
            <label class=" col-md-8">Name on Meter <sup style="color:red !important;">*</sup></label>
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control col-md-6" })
            @Html.ValidationMessageFor(x => x.Name)
        </div>
        <div class="form-row">
            <label class=" col-md-8">ALIAS <sup style="color:red;">*</sup><span style="font-size:11px !important">(EG:HOME/OFFICE/SHOP METER)</span></label>
            @Html.TextBoxFor(m => m.Alias, new { @class = "form-control col-md-6" })
            @Html.ValidationMessageFor(x => x.Alias)
        </div>
        <div class="form-row">
            <label class=" col-md-8">Address</label>
            @Html.TextAreaFor(m => m.Address, new { @class = "form-control col-md-6" })
            @Html.ValidationMessageFor(x => x.Address)
        </div>
        <div class="form-row">
            <label class=" col-md-8">Meter Make <span style="font-size:11px !important"> (NOT REQUIRED IF YOU DO NOT KNOW)</span></label>
            @Html.DropDownListFor(m => m.MeterMake, new SelectList(ViewBag.meterMakes, "value", "text"), null, new { @class = "form-control col-md-6" })
            @Html.ValidationMessageFor(x => x.MeterMake)
        </div>
        <div class="form-group col-md-6 d-flex align-items-end">
            <div class="form-check">
                <span style="width: 10%">@Html.CheckBoxFor(m => m.isVerified, new { @class = "form-check-input" })</span>
                <label class="form-check-label" for="saveAsNewMeter">ACTIVE</label>
            </div>
        </div>
        <div class="form-row submt justify-content-between col-md-6">
            <a href="/Meter/Index" class="btn cancelBtn">Back</a>
            <input type="button" class="savebttn addDepositBtn submitBtn btn" id="addUserBtn" value="@(Model.MeterId > 0 ? "Update" : "Add")">
        </div>
    </form>
</div>

@section scripts{

    <script src="~/Scripts/UserScripts/meter.js"></script>



    <script type="text/javascript">

        $(document).ready(function () {
            //initialize the javascript
            App.init();

        });
    </script>
}
