                                        <h4>Latest (10) recharge history</h4>
                                        <div class="exportdata table-wrapper-scroll-y my-custom-scrollbar">
                                            <table class="table table-bordered  mb-0" id="datatable-icons">
                                                <thead>
                                                    <tr>
                                                        <th class="sorting" data-sortby="CreatedAt">DATE/TIME</th>
                                                        <th>PRODUCT</th>
                                                        <th class="sorting" data-sortby="TransactionId">TRANSACTION ID</th>
                                                        <th class="sorting" data-sortby="MeterNumber">METER #</th>
                                                        <th class="sorting" data-sortby="POS">POS ID</th>
                                                        <th class="sorting" data-sortby="Amount">AMOUNT</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @Html.Partial("Partials/_salesListing", history)
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="contarea">
                            <p>
                                Service not assigned<br />
                                Please contact VENDTECH on +23279990990
                            </p>
                        </div>
                    }


                </div>
            </div>
        </div>
    </div>
</div>

