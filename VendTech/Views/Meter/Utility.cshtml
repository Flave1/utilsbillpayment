@model  IEnumerable<PlatformModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE HTML>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BillPayment </title>
    <style>
        platformLogo {}
       
    </style>
</head>
<body>
    <div class="container-fluid" id="pcont">
        <div class="dashright">
            <div class="page-head">
                <h2>Utility</h2>
                <div class="" style="text-align:right; font-size:30px;   font-weight:bolder;">
                    <span id="balanceSpan" style="color: #00a2e8; ">SSL: @VendTech.BLL.Common.Utilities.FormatAmount(ViewBag.walletBalance)</span>
                </div>
            </div>
            <div class="cl-mcont">
                <div class="row">
                    <div class="col-md-12">
                        <div class="block-flat">
                            @if (Model.Count() > 0)
                            {
                                

                                <div class="contarea">

                                    <ul>
                                        @foreach (var item in Model)
                                        {


                                            <li class="productBox" onclick="onProductClick('@item.Title')" style="cursor: pointer;">
                                                <a href="javascript:void(0)">

                                                    @{
                                                        string icon = string.Empty;
                                                        if (item.Title.Contains("AFRIGAS"))
                                                        {
                                                            icon = "gasicons";
                                                        }
                                                        else if (item.Title.Contains("WATER"))
                                                        {
                                                            icon = "watericons";
                                                        }
                                                        else if (item.Title.Contains("GUMA"))
                                                        {
                                                            icon = "watericons";
                                                        }
                                                        else if (item.Title.Contains("DSTV"))
                                                        {
                                                            icon = "dstvicons";
                                                        }
                                                        else
                                                        {
                                                            icon = "icons";
                                                        }
                                                    }
                                                    <div class="platformLogo" style="width:17%; width:60px;height:75px;display:inline-block;background:url(@item.Logo) no-repeat;background-size:100%;"></div>
                                                    @if (item.DisablePlatform)
                                                    {
                                                        <p class=" badge badge-warning">disabled</p>
                                                    }
                                                    <label style="font-weight:bold;">@item.Title</label>

                                                </a>
                                            </li>
                                        }


                                    </ul>


                                </div>
                            }
                            else
                            {
                                <div class="contarea">
                                    <p>
                                        Service not assigned<br />
                                        Please contact VENDTECH on +23279990990
                                    </p>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</body>
@section scripts{
    <link href="~/Content/assets/css/style.min.css" rel="stylesheet" />
    <script type="text/javascript">

        $(document).ready(function () {
            //initialize the javascript
            App.init();
            //$(".productBox").click(function () {
            //    window.location.href = "/Meter/Recharge";
            //});

           
        });
        function onProductClick(prod) {
            console.log('prod', prod);
            if (prod === "ELECTRICITY (EDSA)") {
                window.location.href = "/Meter/Recharge";
            } else if (prod === "Nigeria MTN") {
                window.location.href = "/Airtime/Recharge";
            }
        }
    </script>
}

</html>

