@model  IEnumerable<PlatformModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE HTML>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BillPayment </title>
</head>
<body>
    <div class="container-fluid" id="pcont">
        <div class="dashright">
            <div class="page-head">
                <h2>Utility</h2>
            </div>
            <div class="cl-mcont">
                <div class="row">
                    <div class="col-md-12">
                        <div class="block-flat">
                            @if (Model.Count() > 0)
                            {
                                

                                <div class="contarea">

                                    <ul>
                                        @foreach (var item in Model)
                                        {
                                            <li class="productBox" style="cursor:pointer;">
                                                <a href="javascript:void(0)">
                                                    <div class="@(item.Title.Contains("GAS") ? "gasicons" : item.Title.Contains("WATER") ? "watericons" : "icons")"></div>
                                                    <label>@item.Title</label>
                                                </a>
                                            </li>
                                        }


                                    </ul>


                                </div>
                            }
                            else
                            {
                                <div class="contarea">
                                    <p>
                                        Service not assigned<br />
                                        Please contact VENDTECH on +23279990990
                                    </p>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</body>
@section scripts{
    <link href="~/Content/assets/css/style.min.css" rel="stylesheet" />
    <script type="text/javascript">

        $(document).ready(function () {
            //initialize the javascript
            App.init();
            $(".productBox").click(function () {
                window.location.href = "/Meter/Recharge";
            });
        });
    ``   </script>
}

</html>

