@model PagingResult<MeterRechargeApiListingModel>
@{ ViewBag.Title = "Manage Reports";
                Layout = "~/Views/Shared/_LayOut.cshtml"; }
<link href="~/Content/css/Kendo/css/kendo.common.min.css" rel="stylesheet" />
<link href="~/Content/css/Kendo/css/kendo.default.min.css" rel="stylesheet" />
<link href="~/Content/css/Kendo/css/kendo.default.mobile.min.css" rel="stylesheet" />
<div class="container-fluid" id="pcont">
    <div class="page-head">
        <h3><b>Manage Sales Report</b></h3>

    </div>
    <div class="cl-mcont">
        <div class="row">
            <div class="col-md-12">
                <div class="block-flat">
                    <div class="content">
                        <div class="table-responsive">
                            <div id="divResult">
                                <div class="topsec">
                                    <h2>REPORTS</h2>
                                    <label>Sales Report</label>
                                    <label>From: <span id="fromSpan">_</span>&nbsp;&nbsp;&nbsp;&nbsp; To: <span id="toSpan">_</span> </label>
                                    <label>Printed on: <span id="printedDate">@ViewBag.Pritdatetime</span></label>
                                    <label>
                                        Export:
                                        <select name="PrintType" id="PrintType">
                                            <option value="Excel">Excel</option>
                                            <option value="PDF">PDF</option>
                                        </select>
                                    </label>

                                    <label>
                                        <button type="button" id="btnExport">Export</button>

                                    </label>
                                    <label>
                                        <button type="button" id="btnprint">Print</button>
                                    </label>

                                </div>
                                <div class="blwsec">
                                    <div class="blwsec-left">
                                        <form action="Report/ExportSalesReportTo" method="post" id="salesform">
                                            <input type="hidden" name="ExportType" id="ExportType" value="Excel" />
                                            <input type="hidden" name="PrintedDateServer" id="PrintedDateServer" />


                                            <input type="hidden" name="SortBy" value="CreatedAt" id="SortBy" />
                                            <input type="hidden" value="Desc" name="SortOrder" id="SortOrder" />
                                            <div class="blwsec-left-row">
                                                <label>POS:</label>
                                                @Html.DropDownList("POS", new SelectList(ViewBag.userPos, "value", "text"), "SELECT POS", new { @id = "pos" })

                                            </div>
                                            <div class="blwsec-left-row big firt">
                                                <label>TRANSACTION PERIOD</label>
                                                <label>FROM:</label>
                                                <input type="text" value="" id="FromDate" name="FromDate">
                                                <label>TO:</label>
                                                <input type="text" value="" id="ToDate" name="ToDate">
                                            </div>


                                            <div class="blwsec-left-row big lst">
                                                <label>REPORT</label>
                                                <select id="rpt" onchange="changeReport()">
                                                    <option value="2" selected="selected">SALES REPORT</option>
                                                    <option value="1">DEPOSIT REPORT</option>
                                                </select>
                                            </div>
                                            <div class="blwsec-left-row">
                                                <label>Meter #:</label>
                                                <input type="text" id="meterNo" name="Meter">
                                            </div>

                                            <div class="blwsec-left-row">
                                                <label>VT Trans ID:</label>
                                                <input type="text" id="tranId" name="TransactionId">
                                            </div>
                                            <input type="button" class="btn btn-primary" value="Search" id="btnFilterSearch" />
                                        </form>
                                    </div>



                                    <div class="blwsec-right">
                                        <div class="exportdata">
                                            <table class="table table-bordered" id="datatable-icons">
                                                <thead>
                                                    <tr>
                                                        <th class="sorting" data-sortby="CreatedAt">DATE/TIME</th>
                                                        <th>PRODUCT</th>
                                                        <th class="sorting" data-sortby="Amount">AMOUNT</th>
                                                        <th class="sorting" data-sortby="TransactionId">TRANSACTION ID</th>
                                                        <th class="sorting" data-sortby="MeterNumber">METER #</th>
                                                        <th class="sorting" data-sortby="VendorName">VENDOR NAME</th>
                                                        <th class="sorting" data-sortby="POS">POS ID</th>

                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @Html.Partial("Partials/_salesListing", Model)
                                                </tbody>
                                            </table>
                                        </div>
                                        @Html.Partial("_Paging")


                                    </div>
                                    <input type="hidden" value="CreatedAt" id="SortBy" />
                                    <input type="hidden" value="Desc" id="SortOrder" />
                                    <div style="clear:both"></div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


